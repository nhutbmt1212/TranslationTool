{
  "name": "dalit",
  "version": "1.0.0",
  "description": "DALIT - AI-powered translation platform",
  "main": "dist-electron/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:src": "tsc -p tsconfig.translator.json && tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json && vite build",
    "build": "npm run build:src && electron-builder build --win --x64 --dir",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"tsc -p tsconfig.translator.json --watch\" \"tsc -p tsconfig.electron.json --watch\" \"tsc -p tsconfig.preload.json --watch\" \"wait-on http://localhost:5173 && electron .\""
  },
  "keywords": [
    "translate",
    "translation",
    "typescript",
    "electron",
    "desktop",
    "dalit",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "i18next": "^25.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.3.5"
  },
  "build": {
    "appId": "com.dalit.app",
    "productName": "DALIT",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.svg",
      "verifyUpdateCodeSignature": false,
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false
    }
  }
}