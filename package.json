{
  "name": "dalit",
  "version": "1.1.3",
  "description": "DALIT - AI-powered translation platform",
  "main": "dist-electron/electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:src": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json && vite build",
    "build": "npm run build:src && electron-builder build --win --x64 --dir",
    "build:installer": "npm run build:src && electron-builder build --win --x64",
    "preview": "vite preview",
    "electron:dev": "concurrently \"npm run dev\" \"tsc -p tsconfig.electron.json --watch\" \"tsc -p tsconfig.preload.json --watch\" \"wait-on http://localhost:5173 && electron .\""
  },
  "keywords": [
    "translate",
    "translation",
    "typescript",
    "electron",
    "desktop",
    "dalit",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/tesseract.js": "^0.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.1",
    "active-win": "^8.2.1",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "electron-updater": "^6.6.2",
    "i18next": "^25.6.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.6.0",
    "react-i18next": "^16.3.5",
    "screenshot-desktop": "^1.15.3",
    "sharp": "^0.34.5",
    "tesseract.js": "^5.1.1",
    "uiohook-napi": "^1.5.4"
  },
  "build": {
    "appId": "com.dalit.app",
    "productName": "DALIT",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "release/.icon-ico/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "python",
        "to": "python",
        "filter": [
          "**/*",
          "!venv/**/*",
          "!__pycache__/**/*",
          "!*.pyc"
        ]
      },
      {
        "from": "scripts",
        "to": "scripts",
        "filter": [
          "*.bat"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "verifyUpdateCodeSignature": false,
      "sign": null,
      "icon": "release/.icon-ico/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false,
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "nhutbmt1212",
      "repo": "TranslationTool"
    }
  }
}
